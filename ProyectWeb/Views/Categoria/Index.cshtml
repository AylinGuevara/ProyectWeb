@model IEnumerable<ProyectWeb.Models.Categoria>

@{
    ViewBag.Title = "Index";
}

<h2>Categoria</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaCreacion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.CategoriaId }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Detalles", "Detalles", new { id=item.CategoriaId }, new { @class = "btn btn-warning" })|
            @Html.ActionLink("Eliminar", "Eliminar", new { id=item.CategoriaId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
