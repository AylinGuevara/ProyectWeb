@model IEnumerable<ProyectWeb.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Clientes</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CondicionPago.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GrupoDescuento.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CondicionPago.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GrupoDescuento.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaCreacion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.ClienteId }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Detalles", "Detalles", new { id=item.ClienteId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id=item.ClienteId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
