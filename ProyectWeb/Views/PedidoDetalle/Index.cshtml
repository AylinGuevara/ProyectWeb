@model IEnumerable<ProyectWeb.Models.PedidoDetalle>

@{
    ViewBag.Title = "Index";
}

<h2>Detalle de Pedidos</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pedido.PedidoId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producto.ProductoId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descuento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Pedido.PedidoId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Producto.ProductoId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaCreacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descuento)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.PedidoDetalleId }, new { @class = "btn btn-outline-success" }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.PedidoDetalleId }, new { @class = "btn btn-outline-warning" })|
            @Html.ActionLink("Eliminar", "Delete", new { id = item.PedidoDetalleId }, new { @class = "btn btn-outline-danger" })
        </td>
    </tr>
}

</table>
